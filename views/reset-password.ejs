<%- include("partials/header") %>
<%- include("partials/navbar") %>

<!-- Reset Password Section -->
<div class="d-flex justify-content-center align-items-center vh-100 mt-5 pt-5">
  <div class="card shadow-lg rounded-4 p-4 login-card" style="max-width: 450px; width: 100%;">
    <div class="text-center mb-4">
      <img src="/assets/logo.png" alt="Codexia Logo" width="70" class="rounded-circle mb-3">
      <h2 class="fw-bold pastel-title">Reset Password</h2>
      <p class="pastel-text">Choose a strong new password for your account</p>
    </div>

    <!-- Reset Password Form -->
    <form action="/reset-password" method="POST">
      <!-- hidden token input (backend will inject it) -->
      <input type="hidden" name="token" value="<%= token %>">

      <div class="mb-3">
        <label for="password" class="form-label fw-semibold">New Password</label>
        <input type="password" class="form-control rounded-3" id="password" name="password" placeholder="Enter new password" required>
      </div>

      <div class="mb-3">
        <label for="confirmPassword" class="form-label fw-semibold">Confirm Password</label>
        <input type="password" class="form-control rounded-3" id="confirmPassword" name="confirmPassword" placeholder="Re-enter new password" required>
      </div>

      <button type="submit" class="btn pastel-btn w-100 rounded-pill fw-semibold mt-2">Update Password</button>
    </form>

    <!-- Extra Links -->
    <div class="text-center mt-3">
      <span class="small">Back to <a href="/login" class="pastel-link fw-semibold">Login</a></span>
    </div>
  </div>
</div>

<%- include("partials/footer") %>
