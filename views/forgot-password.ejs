<!-- Forgot Password Section -->
<div class="d-flex justify-content-center align-items-center vh-100 mt-5 pt-5">
  <div class="card shadow-lg rounded-4 p-4 login-card" style="max-width: 450px; width: 100%;">
    <div class="text-center mb-4">
      <img src="/assets/logo.png" alt="Codexia Logo" width="70" class="rounded-circle mb-3">
      <h2 class="fw-bold pastel-title">Forgot Password?</h2>
      <p class="pastel-text">Enter your email and weâ€™ll send you reset instructions</p>
    </div>

    <!-- Forgot Password Form -->
    <form action="/forgot-password" method="POST">
      <div class="mb-3">
        <label for="email" class="form-label fw-semibold">Email</label>
        <input type="email" class="form-control rounded-3" id="email" name="email" placeholder="Enter your email" required>
      </div>

      <button type="submit" class="btn pastel-btn w-100 rounded-pill fw-semibold mt-2">Send Reset Link</button>
    </form>

    <!-- Extra Links -->
    <div class="text-center mt-3">
      <span class="small">Remembered your password? <a href="/login" class="pastel-link fw-semibold">Login</a></span>
    </div>
  </div>
</div>

